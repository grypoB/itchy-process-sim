<sim duration="300" nbTicks="30000">
    <zone>
        <controller type="OnOff">
            <threshold_low>  -10</threshold_low>
            <threshold_high>10 </threshold_high>
            <output_high>   100 </output_high>
            <output_low>    -100 </output_low> 
            <legend>
                <ctrl>ctrl</ctrl>
                <phen>phen </phen>
                <state>state </state>
            </legend>
        </controller>
        <phenomenon type="sin">
            <amplitude>100 </amplitude> 
            <period>100 </period> 
            <sigma>10</sigma>
        </phenomenon>
        <state>
            <i_phen>0.3 </i_phen>
            <i_ctrl>0.8 </i_ctrl>
            <initial_value>0 </initial_value>
        </state>
    </zone>

    <server log="log.dat" conf="gnuplot.conf"> </server>
</sim>
